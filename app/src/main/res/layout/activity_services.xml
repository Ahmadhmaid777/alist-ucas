<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.services.ServicesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/services_act_toolbar"
            layout="@layout/activites_toobar" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/services_act_services_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/services_act_rec_topMargin"
            android:paddingHorizontal="@dimen/services_act_rec_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/services_act_toolbar"
            tools:listitem="@layout/service_custom_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>